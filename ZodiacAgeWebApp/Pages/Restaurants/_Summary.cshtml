@using ZodiacAgeWebApp.Core
<!--at model lowercase "m" defines the tupe model that will passed to this partial view(Restaurant)-->
@model Restaurant

<div class="card">
    <div class="card-header">
        <!--Capitalized "M" model, is the Model property that we can use to access the data-->
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="Detail" asp-route-restaurantId="@Model.Id" class="btn btn-link">
            View Details
        </a>
        <a asp-page="Edit" asp-route-restaurantId="@Model.Id" class="btn btn-link">
            Edit Details
        </a>

        <a asp-page="Delete" asp-route-restaurantId="@Model.Id" class="btn btn-link">
            Delete
        </a>
    </div>
</div>

